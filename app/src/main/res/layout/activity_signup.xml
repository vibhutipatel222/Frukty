<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".signup"
    android:background="@drawable/bgg3"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@drawable/shape_panel"
        android:layout_height="525dp"
        android:layout_width="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="128dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_height="63dp"
            android:layout_width="304dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView"
            android:textSize="35sp"
            android:textColor="#C4FFFFFF"
            android:text="CREATE ACCOUNT"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="0dp"/>

        <EditText
            android:id="@+id/Name"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:autofillHints="@string/app_name"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/jost"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            android:textColorHint="#B2FFFF"
            android:textColor="#B2FFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/EmailAddress2"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:autofillHints="@string/app_name"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/jost"
            android:hint="E-Mail"
            android:textColor="#B2FFFF"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:textColorHint="#B2FFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_below="@+id/EmailAddress2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:autofillHints="@string/app_name"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/jost"
            android:hint="Phone"
            android:textColor="#B2FFFF"
            android:inputType="phone"
            android:paddingHorizontal="10dp"
            android:textColorHint="#B2FFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Password2"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Phone"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:autofillHints="@string/app_name"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/jost"
            android:hint="Password"
            android:textColor="#B2FFFF"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColorHint="#B2FFFF"
            android:textSize="20sp" />

        <Button
            android:background="@drawable/button_shape"
            android:layout_height="50dp"
            android:layout_width="209dp"
            android:layout_marginTop="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:id="@+id/signup1"
            android:textSize="24dp"
            android:text="Sign Up"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="62dp"
            android:layout_below="@+id/Password2"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>